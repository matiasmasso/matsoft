@page "/forgot-password"
@inject AuthApiClient Auth
@inject NavigationManager Nav

<h3>Forgot password</h3>

<EditForm Model="_model" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="_model.Email" placeholder="Email" />
    <button type="submit">Send reset link</button>
</EditForm>

@if (_sent)
{
    <p>Check your email if an account exists.</p>
}

@code {
    private Model _model = new();
    private bool _sent;

    public class Model
    {
        public string Email { get; set; } = "";
    }

    private async Task OnSubmit()
    {
        var clientUrl = Nav.BaseUri.TrimEnd('/');
        await Auth.ForgotPasswordAsync(_model.Email, clientUrl);
        _sent = true;
    }
}
