@inject UsersService Users

<SharedModal Visible="Visible"
            Title="Reset Password"
            DialogSize="modal-md"
            OnClose="HandleClose"
            Body="@BodyContent"
            Footer="@FooterContent" />

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public UserDto User { get; set; } = default!;
    [Parameter] public EventCallback OnReset { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private bool isSubmitting = false;
    private string newPassword = string.Empty;

    private RenderFragment BodyContent => @<div>
        <p>Reset password for <strong>@User.Email</strong></p>

        <div class="mb-3">
            <label>New Password</label>
            <input class="form-control" type="password" @bind="newPassword" required />
        </div>
    </div>;

    private RenderFragment FooterContent => @<div>
        <button class="btn btn-secondary" @onclick="Cancel" disabled="@isSubmitting">Cancel</button>
        <button class="btn btn-danger" @onclick="Submit" disabled="@isSubmitting">
            @(isSubmitting ? "Resetting..." : "Reset Password")
        </button>
    </div>;

    private async Task Submit()
    {
        isSubmitting = true;

        var ok = await Users.ResetPasswordAsync(User.Id, newPassword);

        isSubmitting = false;

        if (ok)
            await OnReset.InvokeAsync();
    }

    private async Task Cancel() => await OnCancel.InvokeAsync();
    private async Task HandleClose(bool _) => await OnCancel.InvokeAsync();
}