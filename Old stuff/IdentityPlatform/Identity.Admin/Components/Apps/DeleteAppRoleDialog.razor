@inject AppRolesService AppRoles

<SharedModal Visible="Visible"
            Title="Delete Role"
            DialogSize="modal-sm"
            OnClose="HandleClose"
            Body="@BodyContent"
            Footer="@FooterContent" />

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public Guid AppId { get; set; }
    [Parameter] public AppRoleDto Role { get; set; } = default!;
    [Parameter] public EventCallback<Guid> OnDeleted { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private bool isSubmitting = false;

    private RenderFragment BodyContent => @<div>
        <p>Are you sure you want to delete <strong>@Role.Name</strong>?</p>
    </div>;

    private RenderFragment FooterContent => @<div>
        <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
        <button class="btn btn-danger" @onclick="Submit">
            @(isSubmitting ? "Deleting..." : "Delete")
        </button>
    </div>;

    private async Task Submit()
    {
        isSubmitting = true;
        var ok = await AppRoles.DeleteAsync(AppId, Role.Id);
        isSubmitting = false;

        if (ok)
            await OnDeleted.InvokeAsync(Role.Id);
    }

    private async Task Cancel() => await OnCancel.InvokeAsync();
    private async Task HandleClose(bool _) => await OnCancel.InvokeAsync();
}