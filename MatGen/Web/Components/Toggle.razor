<a href="#" @onclick:preventDefault @onclick="@(()=>OnClick())">
    <Icon Id="@(Value ? Icon.Ids.ToggleOn : Icon.Ids.ToggleOff)" />
</a>

@code {
    [Parameter] public bool Value { get; set; } = false;
    [Parameter] public EventCallback<bool> ValueChanged { get; set; }
    [Parameter] public EventCallback<Object> ObjChanged { get; set; }

    void OnClick()
    {
        var value = !Value;
        if (ObjChanged.HasDelegate) // quan Value es Object com a PropertyGrid
            ObjChanged.InvokeAsync(value);
        else
            ValueChanged.InvokeAsync(value);
    }
}