<div class="Grid">
    @foreach (var item in Values ?? new())
    {
        <div class="Item">
            <a href="#" @onclick="@(()=>ItemClick(item))" @onclick:preventDefault>
                @item.Nom
            </a>
        </div>
    }
</div>

@code {
    [Parameter] public List<LocationModel>? Values { get; set; }
    [Parameter] public EventCallback<LocationModel> ItemSelected { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
    }

    void ItemClick(LocationModel item)
    {
        ItemSelected.InvokeAsync(item);
    }

}

