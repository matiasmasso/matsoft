@inherits LayoutComponentBase



<div class="layout-root">

    <ToastContainer></ToastContainer>
    <SharedModal></SharedModal>

    <header>
        <div class="logo">
            <img src="icons/favicon-96x96.png" />
        </div>
        <div class="toggle-btn-container">
            <button class="toggle-btn" @onclick="ToggleSidebar">☰</button>
        </div>
    </header>

    <div class="main-container">

            <aside class="sidebar @(SidebarOpen ? "open" : "closed")">

                <nav class="menu">
                    <a href="/" class="menu-item">Dashboard</a>
                    <a href="/apps" class="menu-item">Apps</a>
                    <a href="/users" class="menu-item">Users</a>
                </nav>

            </aside>

        <main>
            @Body
        </main>
    </div>

</div>

@code {
    private bool SidebarOpen = true;

    void ToggleSidebar() => SidebarOpen = !SidebarOpen;
    void CloseSidebar() => SidebarOpen = false;
}
