@page "/apps/roles"
@using Identity.Contracts.Apps
@inject IAppsService Apps
@inject IAppRolesService AppRoles
@inject ModalService Modal

<h3>App Roles</h3>

@if (AppsList is null)
{
    <p>Loading apps...</p>
}
else
{
    <select @onchange="OnAppChanged">
        <option value="">-- Select an app --</option>
        @foreach (var app in AppsList)
        {
            <option value="@app.Id" selected="@(app.Id == SelectedAppId)">
                @app.Name
            </option>
        }
    </select>

    @if (SelectedAppId != Guid.Empty)
    {
        <button class="btn" @onclick="CreateRole">New Role</button>

        @if (Roles is null)
        {
            <p>Loading roles...</p>
        }
        else if (Roles.Count == 0)
        {
            <p>No roles defined for this app.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Roles)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>@role.Description</td>
                            <td>
                                <button class="btn" @onclick="() => EditRole(role)">Edit</button>
                                <button class="btn btn-danger" @onclick="() => DeleteRole(role)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
}

@code {
    private List<AppDto>? AppsList;
    private List<AppRoleDto>? Roles;
    private Guid SelectedAppId;

    protected override async Task OnInitializedAsync()
    {
        var result = await Apps.GetAllAsync();
        AppsList = result.Value;
    }

    private async Task OnAppChanged(ChangeEventArgs e)
    {
        if (Guid.TryParse(e.Value?.ToString(), out var id))
        {
            SelectedAppId = id;
            await LoadRoles();
        }
    }

    private async Task LoadRoles()
    {
        var result = await AppRoles.GetAllAsync(SelectedAppId);
        Roles = result.Value;
    }

    private async Task CreateRole()
    {
        var parameters = new Dictionary<string, object>
        {
            ["AppId"] = SelectedAppId
        };

        var result = await Modal.OpenAsync<AppRoleDialog>("New Role", parameters) ?? false;
        if (result)
            await LoadRoles();
    }

    private async Task EditRole(AppRoleDto role)
    {
        var parameters = new Dictionary<string, object>
        {
            ["AppId"] = SelectedAppId,
            ["Role"] = role
        };

        var result = await Modal.OpenAsync<AppRoleDialog>("Edit Role", parameters) ?? false;
        if (result)
            await LoadRoles();
    }

    private async Task DeleteRole(AppRoleDto role)
    {
        await AppRoles.DeleteAsync(SelectedAppId, role.Id);
        await LoadRoles();
    }
}