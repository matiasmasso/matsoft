@inject IAppSecretsService SecretsService
@inject ToastService Toasts
@inject ModalService Modal

@if (Secrets is null)
{
    <p>Loading…</p>
}
else
{
    <div class="dialog">
        <h3>Manage Secrets</h3>

        <button class="btn btn-primary mb-3" @onclick="AddSecret">
            Add Secret
        </button>

        @if (Secrets.Count == 0)
        {
            <p>No secrets defined.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Provider</th>
                        <th>Client ID</th>
                        <th style="width:120px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Secrets)
                    {
                        <tr>
                            <td>@s.Provider</td>
                            <td>@s.ClientId</td>
                            <td>
                                <button class="btn btn-secondary btn-sm" @onclick="() => EditSecret(s.Id)">Edit</button>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteSecret(s.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="row mt-3">
            <button class="btn btn-secondary col" @onclick="() => Modal.Close()">Close</button>
        </div>
    </div>
}

@code {
    [Parameter] public Guid AppId { get; set; }

    private List<AppSecretDto>? Secrets;

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
            var result = await SecretsService.GetAllAsync(AppId);
        if (!result.Success) return;
        Secrets = result.Value;
    }

    private async Task AddSecret()
    {
        var result = await Modal.OpenAsync<bool?>(
            "Add Secret",
            new Dictionary<string, object> { ["AppId"] = AppId }
        );

        if (result == true)
            await Load();
    }

    private async Task EditSecret(Guid id)
    {
        var result = await Modal.OpenAsync<bool?>(
            "Edit Secret",
            new Dictionary<string, object> { ["SecretId"] = id }
        );

        if (result == true)
            await Load();
    }

    private async Task DeleteSecret(Guid id)
    {
        if (!await Modal.ConfirmAsync("Delete this secret"))
            return;

        try
        {
            await SecretsService.DeleteAsync(AppId, id);
            Toasts.ShowSuccess("Deleted");
            await Load();
        }
        catch (SafeHttpException ex)
        {
            Toasts.ShowError(ex.Normalized.Message);
        }
    }
}