@page "/authentication/login"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="login">
    <LoggingIn>
        <p>Signing you in…</p>
    </LoggingIn>

    <CompletingLoggingIn>
        <p>Completing login…</p>
    </CompletingLoggingIn>

    <LogInFailed>
        <p>Login failed: @context</p>
    </LogInFailed>
</RemoteAuthenticatorView>