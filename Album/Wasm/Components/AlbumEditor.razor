@page "/album"
@inject AlbumsService _albumsService

<div class="PageWrapper600">
    <h3>Edit Album</h3>

    <EditForm Model="@value" OnValidSubmit="@Save">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <InputText class="form-control" @bind-Value="value.Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Year</label>
            <InputNumber class="form-control" @bind-Value="value.Year" />
        </div>

        <div class="mb-3">
            <label class="form-label">Month</label>
            <InputNumber class="form-control" @bind-Value="value.Month" />
        </div>

        <div class="mb-3">
            <label class="form-label">Day</label>
            <InputNumber class="form-control" @bind-Value="value.Day" />
        </div>

        <div class="ButtonsBar">
            <button type="button" class="btn btn-secondary me-2" @onclick="() => OnClose.InvokeAsync()">Cancel</button>
            @if (isSaving)
            {
                <Loading></Loading>
            }
            else
            {
                <button type="submit" class="btn btn-primary">Save</button>
            }
        </div>

    </EditForm>

    <Error @bind-Value="exception"></Error>
</div>

@code {
    [Parameter] public AlbumModel Value { get; set; } = new();
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<AlbumModel> AfterUpdate { get; set; }
    private AlbumModel value { get; set; } = new();
    private bool isSaving = false;
    private Exception? exception;

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        value = Value;
    }

    private async Task Save()
    {
        try
        {
            await _albumsService.SaveAsync(value);
            await AfterUpdate.InvokeAsync(value);
        }
        catch (Exception ex)
        {
            exception = ex;
        }
    }
}