<div class="PageWrapper600">

    <div class="Searchbox">
        <SearchBox @bind-Value="searchterm"></SearchBox>
    </div>

    <div class="Grid">
        @foreach (var doc in FilteredItems() ?? new())
        {
            <div class="Item">
                <a class="Icon" href="@doc.Docfile?.DownloadUrl()" target="_blank" title="clic aquí per obrir el fitxer">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
                        <path d="M352 448V192H240c-26.5 0-48-21.5-48-48V32H64C46.3 32 32 46.3 32 64V448c0 17.7 14.3 32 32 32H320c17.7 0 32-14.3 32-32zm-.5-288c-.7-2.8-2.1-5.4-4.2-7.4L231.4 36.7c-2.1-2.1-4.6-3.5-7.4-4.2V144c0 8.8 7.2 16 16 16H351.5zM0 64C0 28.7 28.7 0 64 0H220.1c12.7 0 24.9 5.1 33.9 14.1L369.9 129.9c9 9 14.1 21.2 14.1 33.9V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V64z" />
                    </svg>
                </a>

                <a href="#" class="Fch HideOnMobile" onclick="@(()=>ItemClick(doc))" @onclick:preventDefault>
                    <div class="Fch">@($"{doc.Docfile?.Fch:dd/MM/yy}")</div>
                </a>

                <a href="#" class="Nom Truncate" onclick="@(()=>ItemClick(doc))" @onclick:preventDefault>
                    <div class="Fch">@doc.Docfile?.Nom</div>
                </a>


                <a href="#" class="Features HideOnDesktop" onclick="@(()=>ItemClick(doc))" @onclick:preventDefault>
                    @doc.Docfile?.Features()
                </a>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public List<DocfileSrcModel>? Values { get; set; }
    [Parameter] public EventCallback<DocfileSrcModel> ItemSelected { get; set; }
    string? searchterm;

    List<DocfileSrcModel>? FilteredItems()
    {
        if (string.IsNullOrEmpty(searchterm))
            return Values?.OrderByDescending(x => x.Docfile?.Fch).ToList();
        else
            return Values?.Where(x => x.Matches(searchterm)).OrderByDescending(x => x.Docfile?.Fch).ToList();
    }

    void ItemClick(DocfileSrcModel args)
    {
        ItemSelected.InvokeAsync(args);
    }
}
