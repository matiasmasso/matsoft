
@inherits _Base

<div class="Wrapper">

    <a href="#" class="Toggle"
       @onclick="@(()=>{IsShowingOptions=!IsShowingOptions;})"
       @onclick:preventDefault="true">

       <Icon Id="Icon.Ids.VEllipsis"></Icon>

        <div class="@(IsShowingOptions ? "Hidden" : "")">
            Options
        </div>
    </a>

    <div class="Bar @(IsShowingOptions ? "" : "Hidden")">
        @ChildContent
    </div>

</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool IsShowingOptions { get; set; } = false;
}

