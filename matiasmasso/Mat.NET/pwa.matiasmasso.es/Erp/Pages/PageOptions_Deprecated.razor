
@inherits _ComponentBase

<div class="Wrapper">

    <a href="#" class="Toggle"
       @onclick="@(()=>{IsShowingOptions=!IsShowingOptions;})"
       @onclick:preventDefault="true">

       <UxIcon Id="UxIcon.Ids.EllipsisVertical" Width="21px" Height="21px"></UxIcon>

        <div class="@(IsShowingOptions ? "Hidden" : "")">
            Options
        </div>
    </a>

    <div class="Bar @(IsShowingOptions ? "" : "Hidden")">
        @ChildContent
    </div>

</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool IsShowingOptions { get; set; } = false;
}

