@page "/ConsumerCategory/{Guid:guid}"
@inherits _PageBase
@inject IJSRuntime JSRuntime;

<ConsumerCategory Guid="Guid" Cache="AppState.DefaultCache()"></ConsumerCategory>

<AnchorNavigation ScrollRequest="ScrollToFragment"></AnchorNavigation>

@code {
    [Parameter] public Guid Guid { get; set; }

    async Task ScrollToFragment(string elementId)
    {
        //allows Blazor anchor navigation within same page
        await JSRuntime.InvokeVoidAsync("BlazorScrollToId", elementId);
    }

}
