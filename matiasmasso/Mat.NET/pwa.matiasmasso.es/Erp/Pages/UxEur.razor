@inherits _ComponentBase;


@if (CanEdit && isEditing)
{
    <input type="number" @bind-value="@_innerControlValue" @onblur="@(()=>{isEditing = false;})" />
}
else
{
    <a href="#" @onclick="@(()=>{isEditing = true;})" @onclick:preventDefault="true">
        @if (_innerControlValue == null)
        {
            <div>&nbsp;</div>
        }
        else
        {
            <span>@string.Format("{0:N2} €",@_innerControlValue)</span>
        }
    </a>
}


@code {
    [Parameter] public Object Value { get; set; }
    [Parameter] public bool CanEdit { get; set; }
    [Parameter] public string TrueText { get; set; } = "Yes";
    [Parameter] public string FalseText { get; set; } = "No";
    [Parameter] public EventCallback<Decimal> ValueChanged { get; set; }
    [Parameter] public EventCallback<Object> ObjChanged { get; set; }
    private bool isEditing = false;

    private Decimal? _innerControlValue
    {
        get => (Decimal?)Value;
        set
        {
            if ((Decimal?)Value != value)
            {
                Value = value;
                if (ValueChanged.HasDelegate)
                {
                    ValueChanged.InvokeAsync((Decimal)value);
                }
                else if (ObjChanged.HasDelegate)
                {
                    ObjChanged.InvokeAsync(value);
                }
            }
        }
    }

}
