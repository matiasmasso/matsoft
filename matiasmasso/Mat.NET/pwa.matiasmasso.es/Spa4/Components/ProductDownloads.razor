@inherits _ComponentBase

@foreach(var item in Items)
{
    <a href="@item.DownloadUrl()" target="_blank" class="Item">
        <div class="Nom">@item.Nom</div>
        <div class="Features">@item.Features()</div>
    </a>
}
@code {
    [Parameter] public Guid Target { get; set; }
    private List<DocfileDTO> Items { get; set; } = new();

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Items = await base.GetAsync<List<DocfileDTO>>("docfiles/fromTarget", Target.ToString());
            StateHasChanged();
        }

    }
}
