    private async Task SaveRequest()
    {
        value!.Zona = (Guid)gridModel!.Items.FirstOrDefault(x => x.Field == (int)Fields.Zona)?.Value;
        value!.Nom = gridModel!.Items.FirstOrDefault(x => x.Field == (int)Fields.Nom)?.Value?.ToString();

        var apiResponse = await PostAsync<LocationModel, bool>( value, "Location");
        if (apiResponse.Success())
            CancelRequest();
        else
            problemDetails = apiResponse.ProblemDetails;
    }

    private async Task DeleteRequest()
    {
        var apiResponse = await GetAsync<LocationModel>( "Location/delete", value!.Guid.ToString());
        if (apiResponse.Success())
        {
            Cache!.Locations.Remove(value);
            CancelRequest();
        }
        else
            problemDetails = apiResponse.ProblemDetails;
    }

    private void CancelRequest()
    {
        if (RequestToCancel.HasDelegate)
            RequestToCancel.InvokeAsync();
    }

    public async Task<List<Option>> GetOptions(PropertyGridModel.Item item)
    {
        List<Option> retval = new();
        if (item.Field == (int)Fields.Zona)
        {
            retval = atlas!.Zonas
            .Select(x => new Option
                {
                    Id = x.Guid.ToString(),
                    Nom = x.Nom ?? "?",
                    Tag = x.Guid
                }).ToList();
        }

        return retval;
    }
