@inherits _Base

<div class="Wrapper">
    <h1>@Localizer("CarFleet")</h1>

    @if (model == null)
    {
        <Loading></Loading>
    }
    else
    {

        <PageOptions>
                    <UxToggle @bind-Value="@IsShowingObsolets"
                          TrueText="OutdatedIncluded"
                          FalseText="OutdatedIncluded"></UxToggle>
                    <UxLookupEmp Value="@selectedEmp"
                             Values="Emps()"
                             ValueChanged="@OnEmpChanged"></UxLookupEmp>
                              <a href="#" @onclick="AddNew" @onclick:preventDefault>@Localizer("AddNew")</a>
        </PageOptions>

        <SearchBox @bind-Value="@searchTerm"></SearchBox>

        <div class="Summary">
            @string.Format("S'han trobat {0} vehicles, {1} en actiu",model.Count(), model.Where(x => x.Baixa == null).Count())
        </div>


        <div class="Grid">
            <div class="Item ColumnHeaders HideOnMobile">
                <a href="#" class="Truncate"
               @onclick="@(()=>SortColumn(Cols.FchFrom))"
               @onclick:preventDefault="true">
                    @Localizer("PurchaseDate")
                </a>
                <a href="#" class="Truncate"
               @onclick="@(()=>SortColumn(Cols.Plate))"
               @onclick:preventDefault="true">
                    @Localizer("CarPlate")
                </a>
                <a href="#" class="Truncate"
               @onclick="@(()=>SortColumn(Cols.CarModel))"
               @onclick:preventDefault="true">
                    @Localizer("CarModel")
                </a>
                <a href="#" class="Truncate"
               @onclick="@(()=>SortColumn(Cols.Driver))"
               @onclick:preventDefault="true">
                    @Localizer("CarDriver")
                </a>
            </div>

            <div class="GridRowDivider"></div>

            @foreach (var item in FilteredItems())
            {
                <a href="#" class='Item @(item.Baixa == null ? "" : "Obsoleto" )'
                   @onclick="@(()=>ItemClick(item))"
                   @onclick:preventDefault="true">

                    <div class="Label HideOnDesktop">@Localizer("PurchaseDate")</div>
                    <div class="Truncate">
                        @(item.Alta == null ? "" : string.Format("{0:dd/MM/yyyy}", item.Alta))
                    </div>

                    <div class="Label HideOnDesktop">@Localizer("CarPlate")</div>
                    <div class="Truncate">
                        @(item.Matricula ?? "")
                    </div>

                    <div class="Label HideOnDesktop"> @Localizer("CarModel")</div>
                    <div class="Truncate">
                        @(item.Model?.Nom ?? "")
                    </div>

                    <div class="Label HideOnDesktop">@Localizer("CarDriver")</div>
                    <div class="Truncate">
                        @(item.Conductor?.Nom ?? "")
                    </div>
                </a>
            }

        </div>
    }

</div>

<Error ProblemDetails="problemDetails"></Error>



@code {
    private List<VehicleModel>? model;
    private int? selectedEmp;
    private string searchTerm = string.Empty;
    private bool IsShowingObsolets = false;
    private Cols? sortedColumn = Cols.FchFrom;
    private bool isDescendingOrder = false;
    private ProblemDetails? problemDetails;

    private enum Cols
    {
        FchFrom,
        Plate,
        CarModel,
        Driver
    }

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var apiResponse = await GetAsync<List<VehicleModel>>("Vehicles");
            model = apiResponse.Value;
            problemDetails = apiResponse.ProblemDetails;
            StateHasChanged();
        };
    }

    private List<VehicleModel> FilteredItems()
    {
        var retval = model!.Where(x => x.Matches(searchTerm)).ToList();
        if (!IsShowingObsolets)
            retval = retval.Where(x => x.Baixa == null).ToList();
        if (selectedEmp != null)
            retval = retval.Where(x => (int?)x.Emp == selectedEmp).ToList();
        return retval;
    }

    private void SortColumn(Cols col)
    {
        var lang = base.Lang;
        if (col == sortedColumn)
            isDescendingOrder = !isDescendingOrder;
        else
            sortedColumn = col;

        switch (col)
        {
            case Cols.FchFrom:
                model = isDescendingOrder ? model!.OrderByDescending(x => x.Alta ?? default(DateTime)).ToList() : model!.OrderBy(x => x.Alta ?? default(DateTime)).ToList();
                break;
            case Cols.Plate:
                model = isDescendingOrder ? model!.OrderByDescending(x => x.Matricula ?? "").ToList() : model!.OrderBy(x => x.Matricula ?? "").ToList();
                break;
            case Cols.CarModel:
                model = isDescendingOrder ? model!.OrderByDescending(x => x.Model?.Nom ?? "").ToList() : model!.OrderBy(x => x.Model?.Nom ?? "").ToList();
                break;
            case Cols.Driver:
                model = isDescendingOrder ? model!.OrderByDescending(x => x.Conductor?.Nom ?? "").ToList() : model!.OrderBy(x => x.Conductor?.Nom ?? "").ToList();
                break;
        }
    }

    private void ItemClick(VehicleModel item)
    {
        var url = item.PropertyPageUrl();
        navigationManager?.NavigateTo(url);
    }

    private void AddNew()
    {
        navigationManager?.NavigateTo("PgVehicle");
    }


    private List<int> Emps() => model!.Select(x => (int)x.Emp).ToList();

    private void OnEmpChanged(int? emp)
    {
        selectedEmp = emp;
        StateHasChanged();
    }

}
