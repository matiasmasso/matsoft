@inherits _Base

<a class="Wrapper" href="#" @onclick="Toggle" @onclick:preventDefault>
    @if (Model != null)
    {
        <div>
            @Model.Caption?.Tradueix(base.Lang())
        </div>

        @if (Model.Value == true)
        {
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" style="@(Model.Value == true ? "" : "Hidden")">
                <!--Toggle On -->
                <path style="fill:green;" d="M384 64C490 64 576 149.1 576 256C576 362 490 448 384 448H192C85.96 448 0 362 0 256C0 149.1 85.96 64 192 64H384zM384 400C463.5 400 528 335.5 528 256C528 176.5 463.5 112 384 112C304.5 112 240 176.5 240 256C240 335.5 304.5 400 384 400z" />
            </svg>
        }
        else
        {
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" style="@(Model.Value == false ? "" : "Hidden")">
                <!--Toggle Off -->
                <path d="M0 256C0 149.1 85.96 64 192 64H384C490 64 576 149.1 576 256C576 362 490 448 384 448H192C85.96 448 0 362 0 256zM192 112C112.5 112 48 176.5 48 256C48 335.5 112.5 400 192 400C271.5 400 336 335.5 336 256C336 176.5 271.5 112 192 112zM384 400C463.5 400 528 335.5 528 256C528 176.5 463.5 112 384 112H318.1C358.9 147.2 384 198.7 384 256C384 313.3 358.9 364.8 318.1 400H384z" />
            </svg>
        }

    }
</a>

@code {
    [Parameter] public MenuItemToggleModel? Model { get; set; }

    void Toggle()
    {
        Model.Toggle();
        StateHasChanged();
    }
}
