<div class="Wrapper" >
    @if (CanEdit && isEditing)
    {
        <input type="text"
           maxlength="@MaxLength"
           @ref="inputRef"
           @bind-value="@_innerControlValue"
           @onblur="OnBlur" />
    }
    else
    {
         <a class="Display" href="#" @onclick="SetEditMode" @onclick:preventDefault="true">
            @if (string.IsNullOrEmpty(_innerControlValue))
            {
                <div>&nbsp;</div>
            } else
            {
                <div class="Text">
                    @_innerControlValue
                </div>
            }
        </a>
    }

</div>

@code {
    [Parameter] public Object? Value { get; set; }
    [Parameter] public bool CanEdit { get; set; }
    [Parameter] public int? MaxLength { get; set; }

    [Parameter] public EventCallback<string> ValueChanged { get; set; }
    [Parameter] public EventCallback<Object> ObjChanged { get; set; }

    private ElementReference inputRef;
    private bool isEditing = false;
    private bool isInputFocused = false;
    private bool isDivFocused = false;

    private string _innerControlValue
    {
        get => Value?.ToString() ?? "";
        set
        {
            if (Value?.ToString() != value)
            {
                Value = value;

                if (ObjChanged.HasDelegate) // quan Value es Object com a PropertyGrid
                    ObjChanged.InvokeAsync(value);
                if (ValueChanged.HasDelegate)
                    ValueChanged.InvokeAsync(value);
            }
        }
    }

    private void OnBlur()
    {
        isEditing = false;
    }

    private async Task SetEditMode()
    {
        isEditing = true;
        await InvokeAsync(StateHasChanged);
        await inputRef.FocusAsync();
    }
}
