@page "/vehicles"
@page "/{LangSegment}/vehicles"
@implements IDisposable
@layout ProLayout
@inject CultureService culture
@inject SessionStateService session
@inject VehiclesService vehiclesService

<div class="PageWrapper600">


    @if (model == null && exception == null)
    {
        <h1>@culture.Localize("Vehicles")</h1>

        <Loading></Loading>
    }
    else if (selectedItem != null)
    {
        <Vehicle Model="selectedItem" CloseRequest="@(()=>selectedItem=null)"></Vehicle>
    }
    else
    {
        <h1>@culture.Localize("Vehicles")</h1>

        <div class="PageOptions">
            <PageOptions IsShowingOptions>
            <a href="#" @onclick="AddNew" @onclick:preventDefault>
                @culture.Localize("AddNew")
            </a>

            <ToggleObsolets @bind-Value="isShowingObsolets"></ToggleObsolets>
        </PageOptions>
    </div>

        <SelectedEmps @bind-SelectedValues="selectedEmps"></SelectedEmps>

        <SearchBox @bind-Value="@searchTerm"></SearchBox>

        <div class="Summary">
            @string.Format("S'han trobat {0} vehicles, {1} en actiu",model?.Count(), model?.Where(x => x.Baixa == null).Count())
        </div>


        <div class="Grid">
            <div class="Item ColumnHeaders HideOnMobile">
                <a href="#" class="Truncate"
                @onclick="@(()=>SortColumn(Cols.FchFrom))"
                @onclick:preventDefault="true">
                    @culture.Localize("PurchaseDate")
                </a>
                <a href="#" class="Truncate"
                @onclick="@(()=>SortColumn(Cols.Plate))"
                @onclick:preventDefault="true">
                    @culture.Localize("CarPlate")
                </a>
                <a href="#" class="Truncate"
                @onclick="@(()=>SortColumn(Cols.CarModel))"
                @onclick:preventDefault="true">
                    @culture.Localize("CarModel")
                </a>
                <a href="#" class="Truncate"
                @onclick="@(()=>SortColumn(Cols.Driver))"
                @onclick:preventDefault="true">
                    @culture.Localize("CarDriver")
                </a>
            </div>


            @foreach (var item in FilteredValues() ?? new())
            {
                <a href="#" class='Item @(item.Baixa == null ? "" : "Obsoleto" )'
                @onclick="@(()=>selectedItem = item)"
                @onclick:preventDefault="true">

                    <div class="Label HideOnDesktop">@culture.Localize("PurchaseDate")</div>
                    <div class="Truncate">
                        @(item.Alta == null ? "" : string.Format("{0:dd/MM/yyyy}", item.Alta))
                    </div>

                    <div class="Label HideOnDesktop">@culture.Localize("CarPlate")</div>
                    <div class="Truncate">
                        @(item.Matricula ?? "")
                    </div>

                    <div class="Label HideOnDesktop"> @culture.Localize("CarModel")</div>
                    <div class="Truncate">
                        @(item.Model?.Nom ?? "")
                    </div>

                    <div class="Label HideOnDesktop">@culture.Localize("CarDriver")</div>
                    <div class="Truncate">
                        @(item.Conductor?.Nom ?? "")
                    </div>
                </a>
            }
        </div>
    }
</div>

<Error @bind-Exception="exception"></Error>



