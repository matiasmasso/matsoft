    private List<VehicleModel>? FilteredValues()
    {
        var retval = model?
    .Where(x => (string.IsNullOrEmpty(searchTerm) || x.Matches(searchTerm))
    && (selectedEmps?.Any(y => x.Emp == y.Id) ?? false)
    && (x.Baixa == null || x.Baixa > DateTime.Today || isShowingObsolets))
    .OrderByDescending(x => x.Alta)
    .ToList();
        return retval;
    }

    public void Dispose()
    {
        session.OnChange -= Refresca;
        vehiclesService.OnChange -= Refresca;
    }

