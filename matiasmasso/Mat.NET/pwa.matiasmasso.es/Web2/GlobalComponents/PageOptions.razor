<div class="Wrapper">

    <a href="#" class="Toggle"
       @onclick="@(()=>{IsShowingOptions=!IsShowingOptions;})"
       @onclick:preventDefault="true">

        <i class="fa-solid fa-ellipsis-vertical"></i>

        <div class="@(IsShowingOptions ? "Hidden" : "")">
            Opcions
        </div>
    </a>

    <div class="Bar @(IsShowingOptions ? "" : "Hidden")">
        @ChildContent
    </div>


</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool IsShowingOptions { get; set; } = true;

}
