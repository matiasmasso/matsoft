@page "/login"
@using Maui.Models;
@using DTO;
@inherits _ComponentBase

@inject NavigationManager Navigation;
@inject CustomAuthenticationStateProvider AuthStateProvider;

<h3>Login to Access Application</h3>

<div class="alert alert-info">
    This is a dummy login page, providing `Test` for the Username and Password will authenticate you.
</div>

<EditForm Model="@loginModel" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="alert alert-danger" hidden="@LoginFailureHidden">
        Invalid login attempt, please correct and try again.
    </div>
    <div class="form-group">
        <label>Username</label>
        <InputText id="email" @bind-Value="loginModel.Username" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <InputText id="password" type="password" @bind-Value="loginModel.Password" class="form-control" />
    </div>
    <div class="form-group mt-1">
        <button type="submit" class="btn btn-primary w-100">Login Now</button>
    </div>
</EditForm>

@code {
    private LoginViewModel loginModel = new();
    private bool LoginFailureHidden { get; set; } = true;

    private async Task HandleValidSubmit()
    {
        //Valiate user acount
        var jwtToken = await ValidateLogin();
        var successful = !string.IsNullOrEmpty(jwtToken);

        //Not successful, don't need to do anything
        if (!successful)
            return;

        //Call login and redirect
        await AuthStateProvider.Login(jwtToken);
        Navigation.NavigateTo("",true); //Root URL
    }


    public async Task<string?> ValidateLogin()
    {
        var payload = new DTO.LoginRequestDTO(loginModel.Username, loginModel.Password);
        string? retval = await base.PostAsync<LoginRequestDTO,string>(payload, "token");
        if (retval != DTO.Globals.Token) {
            AppState.ResetNav(); 
        }

        LoginFailureHidden = retval != null;
        return retval;
    }

}
