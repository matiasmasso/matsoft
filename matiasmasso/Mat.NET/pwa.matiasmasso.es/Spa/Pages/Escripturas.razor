@page "/Escripturas"

@using Spa.Shared
@using Spa.ViewModels
@layout ProLayout

@inject AppState AppState
@inject HttpClient Http
@inject Microsoft.Extensions.Localization.IStringLocalizer<Escripturas> Loc


@if (viewModel!.LoadStatus == Globals.LoadStatusEnum.Loading) {
    <div>Loading...</div>
} else {
    <div class="Wrapper">

        <h1>@Loc["Title"]</h1>
        <SearchBox @bind-Value="@viewModel.SearchTerm"></SearchBox>

        <Virtualize Items="@viewModel.Items()" Context="item">
            <a class="Item" href="@item.DownloadUrl()" target="_blank">
                <div class="Ico">
                    <img src="img/pdf-36-red.png"/>
                </div>
                <div class="Nom Truncate">
                    @item.Nom
                </div>
                <div class="Details Truncate">
                    @string.Format("{0:dd/MM/yy} {1} protocol {2}",item.FchFrom, item.Notari?.FullNom ?? "", item.NumProtocol == 0 ? "":item.NumProtocol)
                </div>
            </a>
        </Virtualize>
    </div>
}




@code {

    private EscripturasViewModel? viewModel;

    protected override  Task OnInitializedAsync()
    {
        viewModel = new EscripturasViewModel(AppState);
        viewModel.OnStateChange += StateHasChanged;
        viewModel.Fetch(Http);
        return base.OnInitializedAsync();
    }
}
