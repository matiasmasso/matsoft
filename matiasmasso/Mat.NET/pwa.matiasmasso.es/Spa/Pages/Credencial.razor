@page "/credencial/{Guid:guid}"
@using Spa.Shared
@using Spa.ViewModels
@layout ProLayout
@inject HttpClient Http
@inject AppState AppState

@if (viewModel!.LoadStatus == Globals.LoadStatusEnum.Loading) {
    <div>Loading...</div>
} else {
    <EditForm Model="@viewModel" OnValidSubmit="@Submit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            Referencia: <InputText id="nom" @bind-Value="viewModel!.Model!.Referencia" class="form-control" />
        </div>

        <div class="form-group">
            Url: <InputText id="nom" @bind-Value="viewModel!.Model!.Url" class="form-control" />
        </div>

        <div class="form-group">
            Usuari: <InputText id="nom" @bind-Value="viewModel!.Model.Usuari" class="form-control" />
        </div>

        <div class="form-group">
            Password: <InputText id="nom" @bind-Value="viewModel!.Model.Password" class="form-control" />
        </div>

        <div class="form-group">
            Observacions: <InputText id="nom" @bind-Value="viewModel!.Model.Obs" class="form-control" />
        </div>

        <br />

      <div class="Buttons">
          <button type="submit" class="btn btn-success">Update</button>
          <input type="button" form="my-form-ref" class="btn btn-secondary" @onclick=Delete value="Delete"/>
          <input type="button" form="my-form-ref" class="btn btn-secondary" @onclick=Cancel value="Cancel"/>
      </div>
      </EditForm>
}

@code {
    [Parameter]
    public Guid Guid { get; set; }

    private CredencialViewModel? viewModel;


    protected override Task OnParametersSetAsync()
    {
        viewModel = new CredencialViewModel(AppState, Guid);
        viewModel.OnStateChange += StateHasChanged;
        viewModel.Fetch(Http);
        return base.OnParametersSetAsync();
    }

    private void Submit()
    {
        
    }

    private void Delete()
    {
        
    }

    private void Cancel()
    {
        
    }

}
